{{ 'section-footer-announcment.css' | asset_url | stylesheet_tag }}
{% style %}
.section-style-{{ section.id }} {
  padding-top:{{section.settings.padding_top}}px;
  padding-bottom:{{section.settings.padding_bottom}}px;
 background:{{section.settings.bg}};
}
  .section-style-{{ section.id }} *{
    color:{{section.settings.color}};
  }
  .section-style-{{ section.id }} .social-icons a .icon svg path{
    fill:{{section.settings.color}};
  }

{% endstyle %}

<div class="section-style-{{ section.id }}">
<div class="container--large">
<div class="footer_annonemt-wraper">  
<div class="footer-announcmet-image">
  <img src="{{ section.settings.img | img_url: " " }}" width="100%">
</div>
  <div class="footer-annoument-hr">
<h3 class="footer-annoucmnet-heading h5">{{ section.settings.hrheading }}</h3>
  <div class="footer-announet-text">{{ section.settings.hrtext }}</div>
  </div>
  <div class="footer-annoument-contact">
<h3 class="footer-annoucmnet-heading h5">{{ section.settings.contactheading }}</h3>
  <div class="footer-announet-text">{{ section.settings.contacttext }}</div>
  </div>
  <div class="fooetr-annoucmnet-socials">
{%  render 'social-icons' %}
  </div>
</div>
</div>
</div>
{% schema %}
  {
    "name": "Footer Bar",
    "settings": [
      {
        "id":"bg",
        "type":"color",
        "label":"Background color"
      },
      {
        "id":"color",
        "type":"color",
        "label":"Text color"
      },
      {
        "id":"img",
        "type":"image_picker",
        "label":"Image"
      },
      {
        "id":"hrheading",
        "type":"text",
        "label":"Hr Heading"
      },
      {
        "id":"hrtext",
        "type":"richtext",
        "label":"Hr text"
      },
      {
        "id":"contactheading",
        "type":"text",
        "label":"Contact Heading"
      },
      {
        "id":"contacttext",
        "type":"richtext",
        "label":"Contact Text"
      },
      {
        "id":"padding_top",
        "label":"Padding Top",
        "min":0,
        "max":100,
        "unit":"px",
        "default":36,
        "step":1,
        "type":"range"
      },
      {
        "id":"padding_bottom",
        "label":"Padding Bottom",
        "min":0,
        "max":100,
        "unit":"px",
        "default":36,
        "step":1,
        "type":"range"
      }
    ]
  }
{% endschema %}

