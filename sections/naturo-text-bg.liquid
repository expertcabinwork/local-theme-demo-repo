<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .naturo-text-bg--container .ntr{
    padding: 28px 22px;
    background: #EEF4FF;
  }
</style>
<section class="naturo-text-bg--main naturo-text-bg--{{ section.id }} section-{{ section.id }}-padding">
  <div class="naturo-text-bg--inner">
    <div class="page-width">
      <div class="naturo-text-bg--container">
        <h2 class="heading-3">{{ section.settings.title }}</h2>
        <div class="ntr">{{ section.settings.desc }}</div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Naturo text bg",
 
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "heading",
      "default":"What to expect from an email consultation"
    },
        {
      "type": "richtext",
      "id": "desc",
      "label": "text"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "spacing top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "spacing bottom",
      "default": 36
    }
  ],
  
  "presets": [
    {
      "name": "Naturo text bg"
    }
  ]
}
{% endschema %}