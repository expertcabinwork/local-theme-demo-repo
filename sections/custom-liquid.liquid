{%- style -%}
.section--{{ section.id }} {
padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}
@media screen and (min-width: 750px) {
.section--{{ section.id }}  {
padding-top: {{ section.settings.padding_top }}px;
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}
  {% endstyle %}
<div class="container container--large section--{{ section.id }} ">
  <div class="container{% unless section.settings.full_width %} container--medium{% else %} container--fullwidth {% endunless %}">
    {{ section.settings.custom_liquid }}
  </div>
</div>
{% schema %}
{
  "name": "t:sections.refactor_words.custom_code.name",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label"
    },
    {
      "type": "header",
      "content": "t:local-march-update.labels.section_design"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.image.fullwidth",
      "default": false
    },
     {
"type": "range",
"id": "padding_top",
"min": 0,
"max": 100,
"step": 1,
"unit": "px",
"label": "padding top",
"default": 40
},
{
"type": "range",
"id": "padding_bottom",
"min": 0,
"max": 100,
"step": 1,
"unit": "px",
"label": "padding bottom",
"default": 40
}
  ],
  "presets": [
    {
      "name": "t:sections.refactor_words.custom_code.name"
    }
  ]
}
{% endschema %}