<style>
  .main-content {
    padding-bottom: 0;
  }
  .faq-accordion article.item-content {
    padding-left: 40px;
    padding-right: 40px;
    border: none;
  }

  .faq-accordion [data-accordion] {
    background: transparent;
    margin-bottom: 20px;
  }

  .faq-accordion [data-accordion] [data-control] {
    color: #fff;
    font-size: 20px;
    font-weight: 600;
    background: #52a646;
    border-radius: 16px;
  }

  .faq-accordion [data-accordion] [data-control].opend {
    background: #3154a1;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  .faq-accordion [data-accordion] [data-control]:hover {
    background: #3154a1;
  }

  .faq-accordion [data-content] {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 16px;
    border-bottom-left-radius: 16px;
    color: #707070;
  }
  .faq-accordion [data-control] {
    border: none;
  }
  .search-box {
    margin: 1rem auto 2rem;
    text-align: center;
    width: 100%;
  }
  .search-box {
    width: 70%;
    border-radius: 32px;
    border: 2px solid white;
    color: white;
    padding: 6px 24px;
  }
  .search-box .search_form {
    display: flex;
  }
  .search-box .search_form .btn {
    padding: 0;
    background: none;

    font-size: 0.8125em;
    color: #fff;
  }
  .search-box .search_form input {
    color: white;
    font-weight: 600;
    font-size: 16px;
    background: none;
    border: none;
    outline: none;
  }
  .search-box .search_form input::placeholder {
    color: white !important;
    font-weight: 600;
    opacity: 1;
  }
  .search-box .search_form input:focus {
    border: none;
    outline: none;
  }
  #faq_search .form-control {
    -webkit-box-shadow: none;
    box-shadow: none;
  }
  @media (max-width: 768px) {
    .search-box {
      width: 90%;
    }
  }

  .form-control {
    display: block;
    width: 100%;
    height: 34px;
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function load() {
    (function( jQuery ){

  const searchForm = document.getElementById("faq_search");
  const searchInput = document.getElementById("faq_input");
  const accordions = document.querySelectorAll('[data-accordion]');

  searchForm.addEventListener('submit', function (e) {
  e.preventDefault();
  const searchTerm = searchInput.value.toLowerCase();
  const noMatchesMessage = document.getElementById("no_matches");
  let matchFound = false;

  accordions.forEach(accordion => {
  const title = accordion.querySelector('[data-control]').textContent.toLowerCase();
  if (title.includes(searchTerm)) {
    accordion.style.display = "block";
    matchFound = true;
  } else {
    accordion.style.display = "none";
  }
  });

  if (!matchFound) {
  noMatchesMessage.style.display = "block";
  } else {
  noMatchesMessage.style.display = "none";
  }

  });

  })( window.GemQuery || jQuery );
  }, false);

</script>

<div class="search-box">
  <form class="search_form" id="faq_search">
    <input
      id="faq_input"
      class="form-control"
      type="search"
      name="keyword"
      placeholder="FREQUENTLY ASKED QUESTIONS"
      aria-label="Search">
    <button class="btn" type="submit">
      <i class="fa fa-search fa-2x" aria-hidden="true"></i>
    </button>
  </form>
</div>