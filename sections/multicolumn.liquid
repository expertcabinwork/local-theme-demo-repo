<style>
.section-padding-{{section.id}} {
  padding-top:{{section.settings.padding_top}}px;
  padding-bottom:{{section.settings.padding_bottom}}px;
  {% if section.settings.bg_image != blank %}
  background:url('{{section.settings.bg_image | img_url:""}}');
  background-size:cover;
  background-repeat:no-repeat;
  {% else %}
  background:{{section.settings.bg-color}};
  {% endif %}
}

       .button-{{ section.id }}{
                color: {{section.settings.colorbtn}} !important;
                background-color: {{section.settings.bg_color}} !important;
                border: 1px solid {{section.settings.bg_color}} !important;
                }
                .button-{{ section.id }}:hover{
                color: {{section.settings.hovercolor}} !important;
                background-color: {{section.settings.hoverbg_color}} !important;
                border: 1px solid {{section.settings.bg_color}} !important;
                }
    
  .section-padding-{{section.id}} .multicolumn_wrapper{
    display: grid;
    grid-template-columns: repeat({{  section.settings.grid}}, 1fr);
    gap: 25px;
  }
    .section-padding-{{section.id}} .section-container{
    max-width:{{section.settings.page_width}}rem;
    margin: 0 auto;
    padding: 0 2rem;
    
  }
  .multi_img img{
    width: 100%;
    display:block;
  }

  @media(min-width: 1024px){
    .section-padding-{{section.id}} .section-container{
      padding: 0 5rem;
    }
  }
  @media(max-width: 768px){
     .section-padding-{{section.id}} .multicolumn_wrapper{
    grid-template-columns: repeat({{  section.settings.mblgrid}}, 1fr);
  }
  }
  
</style>

<section class="{{ section.settings.unique-class }} section-padding-{{section.id}}" >
  <div class="section-container text-{{section.settings.align}}">
    {% if section.settings.heading != blank %}
      <h1 class="multiccolum_title heading-font-{{ section.settings.heading-size }}">{{ section.settings.heading  }}</h1>
      {% endif %}
    <div class="multicolumn_wrapper">
    {% for block in section.blocks %}
      <div class="multicolumn_column">
        {% if block.settings.img != blank %}
          <div class="multi_img">
            <img src="{{ block.settings.img | img_url: "" }}" >
          </div>
        {% endif %}
    {% if block.settings.heading != blank %}
      <h2 class="mulricolumn_title heading-font-{{ block.settings.heading-size }}">{{ block.settings.heading }}</h2>
    {% endif %}
    {% if block.settings.text != blank %}
      <div class="multicolumn_text text-font-{{ block.settings.text-size }}">{{ block.settings.text }}</div>
    {% endif %}
    {% if block.settings.btn != blank %}
      <a href="{{ block.settings.btn_link }}"class="multicolumn_link button-{{ block.id }}  button button--large  text-font-{{ block.settings.text-size }}">{{ block.settings.btn }}</a>
        <style>
          .multicolumn_link-{{ block.id }}{
            font-weight: bold;
            color: {{block.settings.link_color}};
            text-decoration: underline;
          }
          .button-{{ block.id }}{
                color: {{block.settings.color}} ;
                background-color: {{block.settings.bg_color}};
                border: 1px solid {{block.settings.bg_color}};
                }
                .button-{{ block.id }}:hover{
                color: {{block.settings.hovercolor}};
                background-color: {{block.settings.hoverbg_color}} ;
                border: 1px solid {{block.settings.bg_color}};
                }
        </style>
    {% endif %}
      
        
      </div>
    {% endfor %}
    </div>
    {% if section.settings.text != blank %}
      <div class="multicolumn_desc  text-font-{{ section.settings.text-size }}">{{ section.settings.text }}</div>
    {% endif %}
    {% if section.settings.btn != blank %}
      <div class="multicolumn_button">
      <a href="{{ section.settings.link }}" class="btn-style-{{ section.settings.btn_style }} button button--large  button-{{ section.id }}">{{ section.settings.btn }}</a>
      </div>
  {% endif %}
  </div>
</section>
