<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .naturo-txt-rte p{
    color: #000;
    font-size: 18px;
  }
  .sct-header--title{
    margin-bottom:38px!important
  }
@media screen and (max-width: 768px) {
   .sct-header--title {
    margin-bottom: 24px!important;
}
  .naturo-txt-rte p {
    font-size: 16px;
}
}
</style>
<section class="naturo-text--main naturo-text--{{ section.id }} section-{{ section.id }}-padding">
  <div class="naturo-text--inner">
    <div class="page-width">
      <div class="naturo-text--container">
        <h2 class="sct-header--title ntr--title heading-1">{{ section.settings.title }}</h2>
        <div class="naturo-txt-rte">
         {{ section.settings.description }}
</p>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Naturo text content",
 
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default":"What is a Naturopathic  Consultation?"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "description"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "spacing top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "spacing bottom",
      "default": 36
    }

  ],
  
  "presets": [
    {
      "name": "Naturo text content"
    }
  ]
}
{% endschema %}